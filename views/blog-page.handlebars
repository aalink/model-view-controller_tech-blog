  <div class='row'>
    <div class='card'>
      <div class='card-header'>{{blog.title}}</div>
      <div class='card-body'>
        <p class='card-text'>
          {{blog.content}}
        </p>
      </div>
      <div class='card-footer text-muted'>
        Posted by
        {{blog.user.username}}
        on
        {{blog.date}}
      </div>
    </div>
  </div>